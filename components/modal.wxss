/* components/modal.wxss */

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 9999;
}

.modal-content {
  width: 80%;
  min-height: 50%;
  max-height: 80%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #fafafa;
  border-radius: 3px;
}

.title{
   width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.main-content {
  flex: 1;
  width: 100%;
  height: 100%;
  background: #fafafa;
  overflow-y: scroll;
}

.appreciationTable{
  width: 98%;
  display: flex;
  flex-direction: column;
  background: white;
  margin: 0 10rpx;
}

.unitItemLeft{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
}

.baseItemWithBorder{
  flex-grow: 1;
  height: 100%;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border-bottom: solid 1rpx gainsboro;
}

