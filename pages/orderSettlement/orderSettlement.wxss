/* pages/orderSettlement/orderSettlement.wxss */

Page {
  background: rgba(244, 244, 244, 1);
}

/* siwtch */

.switchContent {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 22rpx;
}

.outerWrap {
  width: 340rpx;
  height: 104rpx;
  border-radius: 52rpx;
  border: 4rpx solid rgba(229, 229, 229, 1);
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(246, 246, 246, 1);
}

.outerWrap .innerWrap {
  width: 320rpx;
  height: 84rpx;
  background: rgba(197, 197, 197, 0.3);
  border-radius: 42rpx;
  border: 4rpx solid rgba(197, 197, 197, 0.3);
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.outerWrap .innerWrap .image {
  width: 42rpx;
  height: 34rpx;
}

.outerWrap .innerWrap .text {
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 44rpx;
  margin-left: 14rpx;
}

.radio {
  display: none;
}

/* 收货地址 */

.addressContainer {
  display: flex;
  flex-direction: column;
  background: rgba(255, 255, 255, 1);
  border-radius: 10px 10px 2px 2px;
  margin: 0 14rpx;
  padding: 30rpx 22rpx 30rpx 28rpx;
}

.addressContainer .top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.addressContainer .top .shopName {
  font-size: 36rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(3, 3, 3, 1);
  line-height: 50rpx;
}

.addressContainer .top .time {
  height: 44rpx;
  background: rgba(88, 198, 62, 1);
  border-radius: 24rpx;
  padding: 0 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 28rpx;
}

.addressContainer .bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 22rpx;
}

.addressContainer .bottom .tip {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 36rpx;
}

.arrow {
  width: 30rpx;
  height: 30rpx;
}

.addressContainer .bottom .left {
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
}

.addressContainer .bottom .left .cityContent {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.addressContainer .bottom .left .cityContent .city {
  color: rgba(51, 51, 51, 1);
  margin-left: 22rpx;
}

.addressContainer .bottom .left .address {
  font-size: 28rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
  margin-top: 6rpx;
  margin-bottom: 16rpx;
}

/* 电话 */

.addressContainer .bottom .phoneContent {
  display: flex;
  flex-direction: row;
  align-items: center;
  flex: 1;
  margin-right: 46rpx;
  position: relative;
}

.addressContainer .bottom .phoneContent .image {
  width: 26rpx;
  height: 32rpx;
}

.addressContainer .bottom .phoneContent .input {
  flex: 1;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40px;
  margin-left: 8rpx;
}

.addressContainer .bottom .phoneContent .placeholder-class {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 36rpx;
}

.addressContainer .bottom .phoneContent .phoneNumberTip {
  padding: 6rpx 20rpx 4rpx 16rpx;
  background: rgba(243, 243, 243, 1);
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 40rpx;
  position: absolute;
  bottom: -55rpx;
  left: 36rpx;
}

/* 商品信息 */

.productInfoContainer {
  display: flex;
  flex-direction: column;
  margin: 10rpx 14rpx;
  padding: 24rpx 28rpx 22rpx 30rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 4rpx;
}

.productInfoContainer .productText {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
  margin-bottom: 12rpx;
}

.productInfoContainer .orderContent {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 10rpx 0 18rpx 0;
}

.productInfoContainer .orderContent .image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 4rpx;
  margin-right: 16rpx;
}

.productInfoContainer .orderContent .desc {
  flex: 1;
  height: 96rpx;
  display: flex;
  flex-direction: column;
}

.productInfoContainer .orderContent .desc .name {
  flex: 1;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(8, 8, 8, 1);
  line-height: 36rpx;
}

.productInfoContainer .orderContent .desc .tip {
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 28rpx;
}

.productInfoContainer .orderContent .right {
  width: 186rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-left: 54rpx;
}

.productInfoContainer .orderContent .right .quantity {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(3, 3, 3, 1);
  line-height: 36rpx;
}

.productInfoContainer .orderContent .right .delPrice {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(199, 199, 199, 1);
  line-height: 34rpx;
  text-decoration-line: line-through;
}

.productInfoContainer .orderContent .right .price {
  font-size: 28rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(8, 8, 8, 1);
  line-height: 40rpx;
}

/* 其他费用 */

.productInfoContainer .otherFee {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.productInfoContainer .otherFee .tip {
  width: 106rpx;
  height: 32rpx;
  background: rgba(88, 198, 62, 0.15);
  border-radius: 2rpx;
  border: 2rpx solid rgba(88, 198, 62, 0.3);
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  line-height: 28rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.productInfoContainer .otherFee .image {
  width: 24rpx;
  height: 24rpx;
}

.productInfoContainer .otherFee .price {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
}

.productInfoContainer .totalCost {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 52rpx;
}

.productInfoContainer .totalCost .left {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
}

.productInfoContainer .totalCost .left .price {
  color: #ff4531;
}

.productInfoContainer .totalCost .right {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
}

.productInfoContainer .totalCost .right .price {
  font-size: 36rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
  line-height: 50rpx;
  margin-left: 12rpx;
}

/* 备注、支付方式 */

.bottomContainer {
  display: flex;
  flex-direction: column;
  background: rgba(255, 255, 255, 1);
  border-radius: 4rpx;
  margin: 0 14rpx 44rpx 14rpx;
  padding: 22rpx 24rpx 22rpx 30rpx;
}

.bottomContainer .remarkItem {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.bottomContainer .remarkItem .remarkText {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 36rpx;
}

.bottomContainer .remarkItem .right {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  flex: 1;
  margin-left: 20rpx;
}

.bottomContainer .remarkItem .right .text {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 36rpx;
  margin-right: 12rpx;
  flex: 1;
  text-align: right;
}

.bottomContainer .remarkItem .right .placeholder {
  color: rgba(199, 199, 199, 1);
  flex: 1;
  text-align: right;
}

.bottomContainer .remarkItem .right .weixinPayText {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 36rpx;
  margin-right: 12rpx;
}

.margin-top {
  margin-top: 48rpx;
}

/* 占位：支付bar */

.payBarPlaceHolder {
  width: 100%;
  height: 100rpx;
  background: rgba(244, 244, 244, 1);
}

/* 支付bar */

.payBar {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  z-index: 99;
  display: flex;
  flex-direction: row;
}

.payBar .left {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: rgba(255, 255, 255, 1);
}

.payBar .left .price {
  font-size: 40rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(3, 3, 3, 1);
  line-height: 56rpx;
  margin-left: 36rpx;
}

.payBar .left .size {
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 28rpx;
  margin-left: 20rpx;
}

.payBar .payBut {
  width: 200rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 44rpx;
}

/* 支付方式弹窗 */

.payStyle {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 998;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  flex-direction: column;
}

.payStyle .marskPlaceHolder {
  flex: 1;
  width: 100%;
}

.payStyle .payDialog {
  width: 100%;
  display: flex;
  flex-direction: column;
  background: rgba(255, 255, 255, 1);
}

.payDialog .dialogHeader {
  position: relative;
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.payDialog .dialogHeader .text {
  font-size: 30rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 42rpx;
}

.payDialog .dialogHeader .close {
  position: absolute;
  top: 0;
  right: 0;
  width: 90rpx;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.payDialog .dialogHeader .close .image {
  width: 34rpx;
  height: 34rpx;
}

/* 两种方式 */

.payDialog .payItem {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 36rpx 20rpx 32rpx;
}

.payDialog .payItem .left {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(3, 3, 3, 1);
  line-height: 36rpx;
}

.payDialog .payItem .left .image {
  width: 50rpx;
  height: 38rpx;
  margin-right: 12rpx;
}

.payDialog .payItem .left .balance {
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 28rpx;
  margin-left: 6rpx;
}

.iconBackground {
  background-color: white;
  border-radius: 50%;
}

/* 支付方式确认 */

.btnArea {
  padding: 60rpx 40rpx 40rpx 40rpx;
}
