/* pages/unpaid/unpaid.wxss */

Page {
  background: rgba(244, 244, 244, 1);
}

.unpaidHeader {
  width: 100%;
  height: 82rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: rgba(255, 69, 49, 1);
}

.unpaidHeader .text {
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 44rpx;
  margin-left: 40rpx;
}

.unpaidHeader .unpaidTime {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 34rpx;
  margin-left: 22rpx;
}

/* 自取地址 */

.pickUpAdress {
  display: flex;
  flex-direction: column;
  padding: 28rpx 38rpx 28rpx 42rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 1px 0px 0px rgba(210, 210, 210, 0.5);
}

.pickUpAdress .shopName {
  font-size: 28rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
}

.pickUpAdress .shopName1 {
  font-size: 36rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(3, 3, 3, 1);
  line-height: 50rpx;
}

.pickUpAdress .userAddr {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 34rpx;
  margin-top: 10rpx;
}

.pickUpAdress .userInfo {
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 28rpx;
  margin-top: 12rpx;
}

.contactShopInfo {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.contactShopInfo .shopAddress {
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 28rpx;
}

.contactShopInfo .right {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.contactShopInfo .right .shopAddressImg {
  width: 34rpx;
  height: 34rpx;
}

.contactShopInfo .right .divider {
  width: 2rpx;
  height: 22rpx;
  margin-left: 8rpx;
}

.contactShopInfo .right .contact {
  width: 34rpx;
  height: 34rpx;
  margin-left: 8rpx;
}

.contactShopInfo .right .text {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  line-height: 34rpx;
  margin-left: 8rpx;
}

.orderTime {
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 28rpx;
  margin-top: 14rpx;
}

.pickUpAdress .bottom {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  margin-top: 20rpx;
}

.pickUpAdress .bottom .cancel {
  width: 146rpx;
  height: 50rpx;
  border-radius: 10rpx;
  border: 1px solid rgba(88, 198, 62, 1);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  line-height: 34rpx;
}

.pickUpAdress .bottom .toPay {
  width: 146rpx;
  height: 50rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 34rpx;
  margin-left: 28rpx;
}

/* 商品信息 */

.productInfoContainer {
  display: flex;
  flex-direction: column;
  margin: 10rpx 0;
  padding: 24rpx 42rpx 22rpx 42rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 4rpx;
  box-shadow: 0px 1px 0px 0px rgba(210, 210, 210, 0.5);
}

.productInfoContainer .productText {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
  margin-bottom: 12rpx;
}

.productInfoContainer .orderContent {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 10rpx 0 18rpx 0;
}

.productInfoContainer .orderContent .image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 4rpx;
  margin-right: 16rpx;
}

.productInfoContainer .orderContent .desc {
  flex: 1;
  height: 96rpx;
  display: flex;
  flex-direction: column;
}

.productInfoContainer .orderContent .desc .name {
  flex: 1;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(8, 8, 8, 1);
  line-height: 36rpx;
}

.productInfoContainer .orderContent .desc .tip {
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 28rpx;
}

.productInfoContainer .orderContent .right {
  width: 186rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-left: 54rpx;
}

.productInfoContainer .orderContent .right .quantity {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(3, 3, 3, 1);
  line-height: 36rpx;
}

.productInfoContainer .orderContent .right .delPrice {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(199, 199, 199, 1);
  line-height: 34rpx;
  text-decoration-line: line-through;
}

.productInfoContainer .orderContent .right .price {
  font-size: 28rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(8, 8, 8, 1);
  line-height: 40rpx;
}

/* 其他费用 */

.productInfoContainer .otherFee {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.productInfoContainer .otherFee .tip {
  width: 106rpx;
  height: 32rpx;
  background: rgba(88, 198, 62, 0.15);
  border-radius: 2rpx;
  border: 2rpx solid rgba(88, 198, 62, 0.3);
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  line-height: 28rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.productInfoContainer .otherFee .image {
  width: 24rpx;
  height: 24rpx;
}

.productInfoContainer .otherFee .price {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
}

.productInfoContainer .totalCost {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 52rpx;
}

.productInfoContainer .totalCost .left {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 36rpx;
}

.productInfoContainer .totalCost .right {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.productInfoContainer .totalCost .right .price {
  font-size: 36rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
  line-height: 50rpx;
}

/* 自取订单信息 */

.orderInfo {
  padding: 28rpx 42rpx;
  display: flex;
  flex-direction: column;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 1px 0px 0px rgba(210, 210, 210, 0.5);
  margin-bottom: 30rpx;
}

.orderInfo .orderNumber {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 28rpx;
}

.orderInfo .remarkInfo {
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 28rpx;
  margin-top: 14rpx;
}
