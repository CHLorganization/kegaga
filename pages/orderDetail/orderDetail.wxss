/* pages/orderDetail/orderDetail.wxss */

.orderDetail {
  width: 100%;
  min-height: 100vh;
  background: rgba(244, 244, 244, 1);
  padding: 6rpx 0;
}

.orderFinal {
  width: 100%;
  height: 82rpx;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.orderFinal .img {
  width: 30rpx;
  height: 30rpx;
  margin: 0 14rpx 0 40rpx;
}

.header {
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 1px 0px 0px rgba(210, 210, 210, 0.5);
  padding: 0 40rpx;
  margin-bottom: 10rpx;
}

.headerTop {
  width: 100%;
  height: 154rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  border-bottom: 4rpx dashed rgba(216, 216, 216, 1);
}

.tangshiPart .takeNum {
  font-size: 44rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
}

.waiamiPart {
  position: relative;
  height: 196rpx;
  align-items: flex-start;
  padding: 30rpx 0;
}

.waiamiPart .shopName {
  font-size: 36rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(3, 3, 3, 1);
  margin-bottom: 10rpx;
}

.waiamiPart .shopAddress {
  font-size: 24rpx;
  color: rgba(51, 51, 51, 1);
  margin-bottom: 10rpx;
}

.waiamiPart .costumer {
  font-size: 20rpx;
}

.waiamiPart .reachTime {
  position: absolute;
  top: 32rpx;
  right: 0;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 1);
  background: rgba(88, 198, 62, 1);
  border-radius: 12px;
  padding: 8rpx 20rpx;
}

.headerBottom {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  padding: 35rpx 0;
}

.headerBottom .shopName {
  font-size: 28rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.headerBottom .left view {
  margin-bottom: 8rpx;
}

.waimaiPart2 .left view {
  font-size: 24rpx;
  color: rgba(51, 51, 51, 1);
}

.right {
  font-size: 24rpx;
  color: #58c63e;
  display: flex;
  align-items: center;
}

.right .img {
  width: 34rpx;
  height: 32rpx;
}

.headerBottom .imgRefund {
  width: 42rpx;
  height: 28rpx;
  position: absolute;
  right: 20rpx;
  bottom: 22rpx;
}

/* 订单状态的不同而更改的样式 */

.finished .headerTop {
  border: none;
}

.finished .headerBottom {
  padding: 22rpx 20rpx;
  background: #fbfbfb;
}

.finished {
  padding-bottom: 70rpx;
}

.footer {
  padding: 28rpx 42rpx;
  margin-top: 10rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 1px 0px 0px rgba(210, 210, 210, 0.5);
}

.footer .item {
  margin-bottom: 14rpx;
}

.footer .orderNum, .shopAddress {
  display: flex;
  justify-content: space-between;
}

.footer .againOrderBtn {
  width: 100%;
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  background: rgba(88, 198, 62, 1);
  border-radius: 10rpx;
  padding: 20rpx 0;
  text-align: center;
  margin: 48rpx 0 50rpx;
}

/* 退款弹窗 */

.refundStyle {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 998;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  flex-direction: column;
}

.refundStyle .marskPlaceHolder {
  flex: 1;
  width: 100%;
}

.refundStyle .refundDialog {
  width: 100%;
  display: flex;
  flex-direction: column;
  background: rgba(255, 255, 255, 1);
}

.refundDialog .item {
  width: 100%;
  height: 110rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
}
