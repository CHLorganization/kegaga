/**start.wxss**/
page{
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  font-size: 10pt;
  line-height: 150%;
  min-height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}
/* 关注门店 */

.followContainer {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255, 255, 255, 1);
  padding: 150rpx 40rpx 0;
}

.followContainer .img {
  width: 170rpx;
  height: 164rpx;
  border-radius: 87rpx;
}

.followContainer .name {
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(8, 8, 8, 1);
  line-height: 44rpx;
  margin-top: 24rpx;
}

.followContainer .desc {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
  margin: 16rpx 24rpx 62rpx;
  text-align: center;
}

/* 关注门店 */

.btnArea {
  width: 100%;
}

.chooseOther {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
  margin-top: 34rpx;
  text-decoration: underline;
}
