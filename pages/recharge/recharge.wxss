/* pages/recharge/recharge.wxss */

/* 会员卡 */

.recharge-card {
  width: 100%;
  height: 194rpx;
  position: relative;
  padding: 28rpx 42rpx 8rpx;
}

.recharge-card .image {
  width: 100%;
  height: 100%;
  position: relative;
}

.recharge-card .image .member-type {
  position: absolute;
  right: 24rpx;
  bottom: 18rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.recharge-card .image .member-type .image {
  width: 20rpx;
  height: 24rpx;
}

.recharge-card .image .member-type .type {
  font-size: 20rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 14px;
}

.recharge-card .recharge-card-content {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0px;
  top: 0px;
  padding: 28rpx 42rpx 8rpx;
  display: flex;
  flex-direction: column;
  align-itemsx: center;
}

.recharge-card .recharge-card-content .balance {
  font-size: 48rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  line-height: 33px;
  margin-top: 28rpx;
  margin-left: 30rpx;
}

.recharge-card .recharge-card-content .text {
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 17px;
  margin-left: 40rpx;
}

/* 充值金额 */

.recharge-amout {
  display: flex;
  flex-direction: column;
  padding: 44rpx 40rpx;
}

.recharge-amout .text {
  font-size: 32rpx;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(88, 198, 62, 1);
  line-height: 22px;
  margin-bottom: 32rpx;
}

.recharge-amout .radio-group {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  flex-wrap: wrap;
  align-items: center;
}

.recharge-amout .radio-group .amount {
  width: 210rpx;
  height: 124rpx;
  background: rgba(244, 244, 244, 1);
  border-radius: 10rpx;
  border: 1px solid rgba(244, 244, 244, 1);
  margin-bottom: 14rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 36rpx;
}

.gift-content {
  width: 100%;
  height: 60rpx;
  background: rgba(244, 244, 244, 1);
  display: flex;
  align-items: center;
  padding-left: 36rpx;
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 34rpx;
}

.gift-text-content {
  display: flex;
  flex-direction: column;
  padding: 28rpx 36rpx 12rpx;
}

.gift-text-content .item {
  font-size: 24rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
  margin-bottom: 12rpx;
}

/* 占位：支付bar */

.payBarPlaceHolder {
  width: 100%;
  height: 100rpx;
  background: white;
}

/* 支付bar */

.payBar {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  z-index: 99;
  display: flex;
  flex-direction: row;
}

.payBar .left {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: rgba(255, 255, 255, 1);
  border-top: 1rpx solid rgba(244, 244, 244, 1);
}

.payBar .left .price {
  font-size: 20px;
  font-family: PingFangSC;
  font-weight: 600;
  color: rgba(3, 3, 3, 1);
  line-height: 28px;
  margin-left: 36rpx;
}

.payBar .payBut {
  width: 200rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 44rpx;
}
