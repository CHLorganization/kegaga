.coupon-item {
  width: 100%;
  height: 212rpx;
  box-sizing: border-box;
  padding: 20rpx 36rpx 0rpx 36rpx;
}

.coupon-item-content {
  width: 100%;
  height: 100%;
  position: relative;
}

