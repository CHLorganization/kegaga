.swiper-tab { 
  width: 100%;
  background: rgba(255, 255, 255, 1);
  display: flex;
  flex-direction: row;
  border-bottom: 10rpx solid #F1F1F1;
}

.swiper-tab-item {
  box-sizing: border-box;
  width: 100%;
  padding: 16rpx 0rpx 18rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.swiper-tab-item .text{
  position: relative;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(3, 3, 3, 1);
  line-height: 40rpx;
}

.swiper-tab .active {
  width: 74rpx;
  height: 6rpx;
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 6rpx;
}

.radio {
  display: none;
}

.swiper-item-1 {
  display: flex;
  flex-direction: column;
}

.unUse-content {
  width: 100%;
  height: 80rpx;
  background-color: #f6f6f6;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 70rpx 0 44rpx;
}

.unUse-text {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 36rpx;
}

.icon-background {
  background-color: white;
  border-radius: 50%;
}

.scroll-container {
  display: flex;
  width: 100%;
  height: 100%;
}

