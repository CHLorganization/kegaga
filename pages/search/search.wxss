/* pages/search/search.wxss */

/* 搜索框 */

.search-content {
  flex: 1;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  margin-left: 36rpx;
  margin-right: 36rpx;
}

.search-icon-view {
  width: 64rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  background: rgba(244, 244, 244, 1);
}

.search-icon {
  width: 38rpx;
  height: 38rpx;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  background: rgba(244, 244, 244, 1);
  padding-left: 10rpx;
}


.search-content .searchDelView{
  width: 56rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-top-right-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  background: rgba(244, 244, 244, 1);
}

.search-content .searchDelView .image {
  width: 40rpx;
  height: 40rpx;
}

/* 标签 */

.search-label {
  display: flex;
  flex-direction: column;
  padding: 26rpx 38rpx;
}

.search-label .text {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
}

.lable-content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
  box-sizing: border-box;
}

.lable-view {
  margin: 16rpx 24rpx 0 0;
  background: rgba(244, 244, 244, 1);
  border-radius: 2rpx;
  text-align: center;
  line-height: 36rpx;
  display: inline-table;
  padding: 8rpx 24rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

/* 菜品 */
 .goods {
  height: 176rpx;
  padding: 16rpx 24rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #f7f7f7;
}

.goods .pic {
  width: 182rpx;
  height: 176rpx;
  margin-right: 18rpx;
  border-radius: 8rpx;
  position: relative;
}

.goods .pic .soldout {
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 50rpx;
  background: rgba(0, 0, 0, 0.6);
  border-bottom-left-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.goods .pic .soldout .text {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 34rpx;
}

.goods .right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods .right .top {
  display: flex;
  flex-direction: column;
}

 .goods .right .name {
  font-size: 28rpx;
  line-height: 40rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(8, 8, 8, 1);
}

.goods .right .desc {
  font-size: 10px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 14px;
  margin-top: 10rpx;
}

.goods .right .bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.goods .right .bottom .left {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.goods .right .bottom .left .image {
  width: 40rpx;
  height: 40rpx;
}

 .goods .right .bottom .left .price {
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(255, 69, 49, 1);
  line-height: 44rpx;
}

.goods-container .goods .right .bottom .left .tip {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
  margin-left: 12rpx;
}

.goods .right .bottom .left .tip.line-through {
  text-decoration-line: line-through;
}

 .goods .right .bottom .image {
  width: 58rpx;
  height: 58rpx;
}

.goods .right .bottom .multiple {
  width: 58rpx;
  height: 58rpx;
}

 .goods .right .bottom .multiple {
  width: 104rpx;
  height: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 22rpx;
}

 .goods .right .bottom .multiple .text {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 34px;
}