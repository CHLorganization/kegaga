/* pages/addAddress/addAddress.wxss */

/* 左边容器及字体样式 */

.leftContainer {
  width: 210rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  padding-left: 44rpx;
}

.leftContainer .text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
}

.contactView {
  display: flex;
  flex-direction: row;
  align-items: center;
  min-height: 96rpx;
}

.contactView .right {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  flex: 1;
  margin-right: 46rpx;
}

.nameInput {
  flex: 1;
  height: 100%;
  border-bottom: 2rpx solid rgba(250, 248, 248, 1);
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
}

.placeholder-class {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(199, 199, 199, 1);
  line-height: 40rpx;
}

/* 性别 */

.radio-group {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.gender {
  width: 120rpx;
  height: 58rpx;
  background: rgba(244, 244, 244, 1);
  border-radius: 4rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.radio {
  display: none;
}

.margin-left {
  margin-left: 28rpx;
}

/* 清空手机号 */

.image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
}

/* 地址箭头 */

.arrow {
  width: 20rpx;
  height: 26rpx;
  margin-left: 10rpx;
}

/* 确认按钮 */

.btnArea {
  padding: 40rpx;
}
