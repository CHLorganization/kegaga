.userHeader {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 60rpx 12rpx 48rpx;
}

.userHeader .left {
  display: flex;
  flex-direction: row;
}

.userHeader .left .avatar {
  width: 92rpx;
  height: 92rpx;
  border-radius: 50%;
  box-shadow: 6rpx 6rpx 20rpx rgba(0, 0, 0, 0.2);
}

.userHeader .left .nameContainer {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 4rpx 18rpx 2rpx;
}

.userHeader .left .nameContainer .userName {
  font-size: 40rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(3, 3, 3, 1);
  line-height: 56rpx;
}

.userHeader .left .nameContainer .growthValue {
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 28rpx;
}

.userHeader .left .memberType {
  width: 118rpx;
  height: 32rpx;
  background: linear-gradient(172deg, rgba(220, 220, 220, 1) 0%, rgba(183, 183, 183, 1) 100%);
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  margin-top: 18rpx;
}

.userHeader .qrCode {
  width: 48rpx;
  height: 48rpx;
}

/* 余额，积分，券 */

.balanceContainer {
  display: flex;
  flex-direction: row;
  align-items: center;
  /* padding: 24rpx 12rpx 26rpx 18rpx; */
  padding: 0 54rpx;
}

.balanceContainer .box {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: center;
  padding: 24rpx 0 26rpx;
}

.balanceContainer .box .balance {
  display: flex;
  flex-direction: column;
  padding-left: 44rpx;
}

.balanceContainer .box .points {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.balanceContainer .box .voucher {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  padding-right: 42rpx;
}

.balanceContainer .num {
  font-size: 40rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
  line-height: 56rpx;
}

.balanceContainer .text {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 34rpx;
  text-align: center;
  align-self: center;
}

.balanceContainer .dividerLine {
  width: 2rpx;
  height: 28rpx;
  background-color: #ffe6e6e6;
}

/* 会员充值，权益 */

.member {
  height: 224rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(0, 0, 0, 0.1);
  border-radius: 4rpx;
  display: flex;
  flex-direction: row;
  margin: 0 54rpx;
}

.member .box {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  padding-bottom: 42rpx;
}

.member .box .imgL {
  width: 84rpx;
  height: 70rpx;
  margin-bottom: 12rpx;
}

.member .box .imgR {
 width: 84rpx;
  height: 70rpx;
  margin-bottom: 12rpx;
}

.member .box .text {
  font-size: 26rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
  line-height: 36rpx;
}

/* 资料 */

.modifyData {
  font-size: 30rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
  line-height: 42rpx;
  margin: 58rpx 0 20rpx 44rpx;
}

.dataItemContent {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 42rpx 20rpx 44rpx;
}

.dataItemContent .text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
}

.dataItemContent .arrow {
  width: 30rpx;
  height: 30rpx;
}
